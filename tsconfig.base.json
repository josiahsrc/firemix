{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@firemix/core": ["packages/core/src/index"],
      "@firemix/core/*": ["packages/core/src/*"],
      "@firemix/client": ["packages/client/src/index"],
      "@firemix/client/*": ["packages/client/src/*"],
      "@firemix/admin": ["packages/admin/src/index"],
      "@firemix/admin/*": ["packages/admin/src/*"],
      "@firemix/mixed": ["packages/mixed/src/index"],
      "@firemix/mixed/*": ["packages/mixed/src/*"]
    }
  }
}
